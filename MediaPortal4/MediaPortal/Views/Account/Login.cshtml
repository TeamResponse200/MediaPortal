@using MediaPortal.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/LogRegLayout.cshtml";
}


<section id="loginForm">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
        @Html.AntiForgeryToken()

        <div class="col-md-8 col-md-offset-2" style="padding-top: 50px; font-size: 22px; font-weight: bold">Войдите в аккаунт</div>
        <div class="col-md-10 col-md-offset-1">
            <div class="col-md-8 col-md-offset-2" style="padding-bottom: 40px;">или @Html.ActionLink("Создайте аккаунт", "Register", "Account", null, null)</div>

            <div class="form-group">
                <div class="col-md-10 col-md-offset-1">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Имя пользователя" })
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                </div>
            </div>
            <p></p>
            <div class="form-group">
                <div class="col-md-10 col-md-offset-1">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control centered", @placeholder = "Пароль" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-1 col-md-10">
                    <input type="submit" value="Войти" class="btn btn-primary" style="width:215px;" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-1 col-md-10">
                    <input type="submit" value="Регистрация через Facebook" class="btn text-center" style="width:215px; border:1px solid gray" />
                </div>
            </div>
        </div>

    }
    <section />

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }






