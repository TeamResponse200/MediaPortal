@model MediaPortal.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/LogRegLayout.cshtml";
}

<section id="loginForm">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
        @Html.AntiForgeryToken()

        <div class="col-md-8 col-md-offset-2" style="padding-top: 50px; font-size: 22px; font-weight: bold">Зарегистрируйтесь</div>
        <div class="col-md-10 col-md-offset-1">
            <div class="col-md-10 col-md-offset-1" style="padding-bottom: 40px;">или @Html.ActionLink("Войдите в свой аккаунт", "Login", "Account", null, null)</div>

            <div class="form-group">
                <div class="col-md-10 col-md-offset-1">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Имя пользователя" })
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10 col-md-offset-1">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <p></p>
            <div class="form-group">
                <div class="col-md-10 col-md-offset-1">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control centered", @placeholder = "Пароль" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-1 col-md-10">
                    <input type="submit" value="Зарегистрироваться" class="btn btn-primary" style="width:215px;" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-1 col-md-10">
                    <input type="submit" value="Регистрация через Facebook" class="btn text-center" style="width:215px; border:1px solid gray" />
                </div>
            </div>
        </div>

    }
    <section />

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }


