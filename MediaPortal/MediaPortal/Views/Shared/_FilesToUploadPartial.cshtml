@model MediaPortal.Models.FilesToUploadModels



<div class="col-md-12  btn" id="uploadButton" data-toggle="modal" data-target="#filesModal">Загрузить файлы</div>


<div class="modal fade" id="filesModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h3 class="modal-title">Загрузка файлов</h3>

            </div>
            <div class="modal-body">
                @using (Html.BeginForm("UploadFiles", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.UserID)
                    @Html.HiddenFor(m => m.ParrentID)
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Files, new { type = "file", enctype = "multipart/form-data", multiple = "multiple", accept = "image/x-png, image/jpeg, video/mp4" })
                    </div>
                    <div class="form-group">
                        <div class="col-md-10 col-md-offset-1">
                            <button type="submit" class="btn col-md-12" id="registerButton">Загрузить файлы</button>
                        </div>
                    </div>
                }
            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-default" data-dismiss="modal">Отменить</a>
            </div>
        </div>
    </div>
</div>