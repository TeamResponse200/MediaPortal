@model MediaPortal.Models.FileSystemModels


<div class="col-md-12 fileSystem-list-item" name="@Model.Id" folder-name="@Model.Name">
    <div class="col-md-1">
        @if (Model.Type.Equals("Folder"))
        {
            <span id="iconFolder"></span>
        }
        else
        {
            <span id="iconFile"></span>
        }
    </div>
    <div class="col-md-8 file-name-list-item">
        @Model.Name
        @*@Html.ActionLink("linkText","UserFiles","Home", routeValues: new { folderID = Model.Id, folderName = Model.Name },htmlAttributes: null)*@
    </div>
    <div class="col-md-3" id="fileTagListItem"> + Добавить тег</div>

    
</div>

