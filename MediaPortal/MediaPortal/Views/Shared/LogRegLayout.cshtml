@{
    ViewBag.Title = "LogRegLayout";
}

<!DOCTYPE html>
<html>
<head>
    <title>Authorization page</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body id="GlobalBackground">
    <footer>
        <div class="container" style="margin-top:75px;">
            <div class="row">
                <div class="col-md-4 col-md-offset-4 text-center" id="logo">logo</div>
                <br>
                <div class="col-md-4 col-md-offset-4 text-center" id="greetings">Добро пожаловать</div>
            </div>
        </div>
    </footer>
    <br>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4 text-center" id="authorizationBlock">
                @RenderBody()
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

