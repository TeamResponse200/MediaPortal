@model MediaPortal.Models.FileSystemModels

<div class="col-md-2 file-block-item">
    <div class="col-md-12 fileSystem-list-item context-menu-folder file-block-item" data-name="@Model.Id" data-folder-name="@Model.Name">
        <div class="col-md-4">
            @if (Model.Type.Equals("Folder"))
            {
                <span class="iconFolder"></span>
            }
            else
        if (Model.Type.ToLower().Equals(".mp4"))
            {
                <span class="iconVideo"></span>
            }
            else
            {
                <span class="iconFile"></span>
            }
        </div>
        <div class="col-md-8 element-name file-name-list-item">
            @Model.Name
        </div>

    </div>
</div>
