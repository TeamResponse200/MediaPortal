@model MediaPortal.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/LogRegLayout.cshtml";
}

<section id="loginForm">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="col-md-8 col-md-offset-2" id="signinInvitation">Зарегистрируйтесь</div>
        <div class="col-md-10 col-md-offset-1">
            <div class="col-md-10 col-md-offset-1" id="registerLinkIndentation">или @Html.ActionLink("Войдите в свой аккаунт", "Login", "Account", null, null)</div>

            <div class="form-group">
                <div class="col-md-10 col-md-offset-1">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Имя пользователя" })
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10 col-md-offset-1">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <p></p>
            <div class="form-group">
                <div class="col-md-10 col-md-offset-1">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control centered", @placeholder = "Пароль" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-1 col-md-10">
                    <input type="submit" value="Зарегистрироваться" class="btn btn-primary" style="width:215px;" />
                </div>
            </div>
        </div>
    }
    <section />
    @{
        using (Html.BeginForm("ExternalLogin", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div id="socialLoginList">
                <p>
                    <button type="submit" class="col-md-offset-1 col-md-10 btn btn-default" id="Facebook" style="width:215px; margin-left:70px; border:1px solid gray" name="provider" value="Facebook" title="Log in using your Facebook account">Facebook </button>
                </p>
            </div>
        }
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }


